library(readxl)
#la ventaja de readxl es que es muy basico y tiene pocas dependencias. lo malo es que este paquete no servira para algo muy avanzado de excel

path_to_file <- "data/ejemplos_lectura.xlsx"
df_ejemplos <- read_xlsx(path_to_file)
df_ejemplos

# Hay hojas ocultas. nos interesa leer solo lo que queremos usar. en este documento de excel hay celdas innecesarias.
excel_sheets(path_to_file)

# Para leer una hoja en concreto
df_ejemplos <- read_xlsx(path_to_file, sheet = "Fechas")
df_ejemplos

# Para leer regiones
df_fechas <- read_xlsx(path_to_file, 
                       sheet = "Fechas", 
                       skip = 2, 
                       col_types = c(rep("skip", 3), rep("guess", 5)))
#el argumento de skip le dice que se salte la lectura de las dos primeras filas. con el argumento de col types estamos diciendo que se salte
#la lectura de la tercera columna y que para la lectura de la quinta columna adivine lo que es.

df_fechas

# Para fechas mÃ¡s complicadas, trabajaremos con dplyr
df_chungo <- read_xlsx(path_to_file, sheet = "Holi")
df_chungo